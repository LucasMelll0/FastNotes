<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/beige"
        tools:context=".ui.activities.NoteActivity">

        <androidx.cardview.widget.CardView
            android:id="@+id/toolbar_input_note_fragment"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:cardBackgroundColor="@color/beige"
            android:elevation="@dimen/cardview_default_elevation">
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/imagebutton_back_note_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/invisible"
                    android:src="@drawable/ic_arrow_back" />
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/imagebutton_confirm_note_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:backgroundTint="@color/invisible"
                    android:src="@drawable/ic_check"
                    android:layout_marginEnd="8dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_imageview"
            android:layout_width="0dp"
            android:layout_height="370dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_input_note_fragment"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageview_input_note_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/backgrounds/scenic" />
        </androidx.cardview.widget.CardView>




            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinput_title_input_note_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="265dp"
                android:minHeight="62dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toBottomOf="@id/cardview_imageview"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeWidth="0dp"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                android:hint="@string/add_a_title"
                app:hintTextColor="@color/carbon"
                app:boxStrokeColor="@color/invisible"
                android:layout_margin="16dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/carbon"
                    android:textSize="24sp"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinput_description_input_note_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textinput_title_input_note_fragment"
                android:layout_margin="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeWidth="0dp"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                android:hint="@string/add_a_description"
                app:hintTextColor="@color/carbon"
                app:boxStrokeColor="@color/invisible"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:textColor="@color/carbon"
                    android:textSize="24sp"
                     />
            </com.google.android.material.textfield.TextInputLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_swicth_public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textinput_description_input_note_fragment"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp"
            android:textSize="20sp"
            android:textColor="@color/carbon"
            android:textStyle="italic"
            android:text="@string/public_text"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_public_input_note_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/title_swicth_public"
            app:layout_constraintBottom_toBottomOf="@id/title_swicth_public"
            app:layout_constraintStart_toEndOf="@id/title_swicth_public"
            android:layout_marginStart="16dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fab_delete_note_fragment"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/title_swicth_public"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/fab_add_image"
            android:layout_marginHorizontal="24dp"
            android:text="@string/delete"
            android:gravity="center"
            app:iconGravity="textStart"
            android:backgroundTint="@color/red"
            android:textColor="@color/beige"
            app:iconTint="@color/beige"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="16dp"
            app:layout_constraintVertical_bias="1"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            android:src="@drawable/ic_add_image"
            android:contentDescription="@string/content_description_fab_add_image"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
