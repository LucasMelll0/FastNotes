<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.fastnotes.ui.fragments.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_notesListFragment"
            app:destination="@id/notesListFragment" />
        <action
            android:id="@+id/action_loginFragment_to_notesListFragment2"
            app:destination="@id/notesListFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.fastnotes.ui.fragments.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/notesListFragment"
        android:name="com.example.fastnotes.ui.fragments.NotesListFragment"
        android:label="NotesListFragment"
        tools:layout="@layout/fragment_notes_list">
        <action
            android:id="@+id/action_notesListFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_notesListFragment_to_myNoteFragment"
            app:destination="@id/myNoteFragment" />
        <action
            android:id="@+id/action_notesListFragment_to_allNoteFragment"
            app:destination="@id/allNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/myNoteFragment"
        android:name="com.example.fastnotes.ui.fragments.MyNoteFragment"
        android:label="MyNoteFragment"
        tools:layout="@layout/fragment_my_note">
        <argument
            android:name="note"
            app:argType="com.example.fastnotes.model.Note"
            app:nullable="true" />
        <action
            android:id="@+id/action_myNoteFragment_to_notesListFragment"
            app:destination="@id/notesListFragment" />
    </fragment>
    <fragment
        android:id="@+id/allNoteFragment"
        android:name="com.example.fastnotes.ui.fragments.AllNoteFragment"
        android:label="AllNoteFragment"
        tools:layout="@layout/fragment_all_note">
        <action
            android:id="@+id/action_allNoteFragment_to_notesListFragment"
            app:destination="@id/notesListFragment" />
        <argument
            android:name="note"
            app:argType="com.example.fastnotes.model.Note"
            app:nullable="true" />
    </fragment>
</navigation>